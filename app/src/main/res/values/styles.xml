<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CourseChip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gc_text_primary</item>
        <item name="android:background">@drawable/bg_course_chip</item>
    </style>

    <style name="ThemeOverlay_GoCode_BottomSheet" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/GoCodeBottomSheetStyle</item>
    </style>

    <style name="GoCodeBottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_home_cards</item>
    </style>

    <style name="SettingsSectionTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gc_text_secondary</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

</resources>