<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profileRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_gradient">

    <ImageButton
        android:id="@+id/btnProfileMenu"
        android:layout_width="48dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:background="@android:color/transparent"
        android:contentDescription="Profile menu"
        android:elevation="16dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_more_vert"
        app:tint="@android:color/white" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/profileScroll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnProfileMenu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="22dp"
            android:paddingEnd="20dp"
            android:paddingBottom="22dp">

            <ImageView
                android:id="@+id/avatarImage"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:elevation="12dp"
                android:padding="6dp"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar_alien" />

            <TextView
                android:id="@+id/profileUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:text="Username"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/profileXpProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:max="1000"
                android:progress="350"
                android:progressDrawable="@drawable/progress_rounded" />

            <TextView
                android:id="@+id/profileLevelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:text="level 5"
                android:textColor="#A9B3C7"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/profileXpText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:text="XP 0/0"
                android:textColor="#A9B3C7"
                android:textSize="16sp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profileStatsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                app:cardBackgroundColor="@color/gc_card_background"
                app:cardCornerRadius="22dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_home_cards"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="18dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Courses\ncompleted"
                            android:textColor="#A9B3C7"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/profileCoursesCompleted"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="48dp"
                        android:background="#263B57" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Challenges solved"
                            android:textColor="#A9B3C7"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/profileChallengesSolved"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="48dp"
                        android:background="#263B57" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Arena\nmatches won"
                            android:textColor="#A9B3C7"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/profileArenaWins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profileCoursesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="22dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Courses"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Completed:"
                        android:textColor="#A9B3C7"
                        android:textSize="12sp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.chip.Chip
                                style="@style/CourseChip"
                                android:layout_marginEnd="10dp"
                                android:text="Python Basics" />

                            <com.google.android.material.chip.Chip
                                style="@style/CourseChip"
                                android:layout_marginEnd="10dp"
                                android:text="Algorithms" />

                            <com.google.android.material.chip.Chip
                                style="@style/CourseChip"
                                android:layout_marginEnd="10dp"
                                android:text="Java Basics" />

                            <com.google.android.material.chip.Chip
                                style="@style/CourseChip"
                                android:layout_marginEnd="10dp"
                                android:text="C Basics" />

                            <com.google.android.material.chip.Chip
                                style="@style/CourseChip"
                                android:layout_marginEnd="10dp"
                                android:text="C Functions" />

                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profileAchievementsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="22dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Achievements"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:importantForAccessibility="no"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/achFirstLogin"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ach_first_login" />

                            <ImageView
                                android:id="@+id/achFirstCourse"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ach_first_course" />

                            <ImageView
                                android:id="@+id/achFirstChallenge"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ach_first_challenge" />

                            <ImageView
                                android:id="@+id/achChallenges10"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_marginEnd="12dp"
                                android:alpha="0.3"
                                android:src="@drawable/ach_challenges_10" />

                            <ImageView
                                android:id="@+id/achArenaFirstWin"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_marginEnd="12dp"
                                android:alpha="0.3"
                                android:src="@drawable/ach_arena_first_win" />

                            <ImageView
                                android:id="@+id/achStreak7"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_marginEnd="12dp"
                                android:alpha="0.3"
                                android:src="@drawable/ach_streak_7" />

                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
