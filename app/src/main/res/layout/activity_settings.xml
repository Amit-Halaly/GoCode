<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_gradient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settingsHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@android:color/transparent"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrowback"
            app:tint="@color/gc_text_primary"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/gc_text_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/settingsAvatar"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/avatar_alien"
            android:scaleType="centerCrop"
            android:elevation="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ===== CONTENT ===== -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/settingsScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/settingsHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/SettingsSectionTitle"
                android:text="Account"/>

            <include
                android:id="@+id/itemEditProfile"
                layout="@layout/item_settings_nav"/>

            <include
                android:id="@+id/itemChangeAvatar"
                layout="@layout/item_settings_nav"/>

            <TextView
                style="@style/SettingsSectionTitle"
                android:layout_marginTop="24dp"
                android:text="App Preferences"/>

            <include
                android:id="@+id/itemNotifications"
                layout="@layout/item_settings_switch"/>

            <include
                android:id="@+id/itemLearningMode"
                layout="@layout/item_settings_switch"/>

            <TextView
                style="@style/SettingsSectionTitle"
                android:layout_marginTop="24dp"
                android:text="Info"/>

            <include
                android:id="@+id/itemAbout"
                layout="@layout/item_settings_nav"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
