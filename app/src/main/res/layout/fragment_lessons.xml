<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_gradient"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvLessonsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lessons"
        android:textColor="@color/gc_text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPickLanguage"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/btn_primary"
        android:text="Choose language"
        android:textAllCaps="false"
        android:textColor="@color/gc_text_primary"
        app:cornerRadius="14dp"
        app:icon="@android:drawable/arrow_down_float"
        app:iconGravity="textEnd"
        app:iconPadding="8dp"
        app:iconTint="@color/gc_text_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLessonsTitle" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/lessonsContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@id/btnPickLanguage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
