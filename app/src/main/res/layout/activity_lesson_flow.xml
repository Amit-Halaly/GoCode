<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_gradient"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@android:color/transparent"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrowback"
        app:tint="@color/gc_text_primary" />

    <TextView
        android:id="@+id/tvStepCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/5"
        android:textColor="@color/gc_text_secondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/stepProgress"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:trackCornerRadius="999dp"
        app:trackThickness="6dp"
        app:indicatorColor="@color/btn_primary"
        app:trackColor="@color/pb_bg"/>

    <TextView
        android:id="@+id/tvLessonTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Welcome to Java ðŸ‘‹"
        android:textColor="@color/gc_text_primary"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/stepProgress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvLessonBody"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Body text here..."
        android:textColor="@color/gc_text_secondary"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvLessonTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/lesson_code_box"
        app:strokeWidth="1dp"
        app:strokeColor="@color/gc_text_secondary"
        app:layout_constraintTop_toBottomOf="@id/tvLessonBody"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvLessonCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:text="code here"
            android:textColor="@color/gc_text_primary"
            android:textSize="14sp"
            android:fontFamily="monospace" />
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrev"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="@color/gc_text_primary"
            android:backgroundTint="@color/gc_text_secondary"
            app:cornerRadius="16dp"/>

        <Space
            android:layout_width="12dp"
            android:layout_height="1dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:text="Next"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/gc_text_primary"
            android:backgroundTint="@color/btn_primary"
            app:cornerRadius="16dp"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/leoTipGroup"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/bottomButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivLeoOverlay"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_standing_lion"
            android:scaleType="fitCenter"
            android:elevation="30dp"
            android:translationX="-6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/tipBubble"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/bg_tip_bubble"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintStart_toEndOf="@id/ivLeoOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivLeoOverlay"
            app:layout_constraintBottom_toBottomOf="@id/ivLeoOverlay"
            app:layout_constraintVertical_bias="0.1">

            <TextView
                android:id="@+id/tvTipTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tip from Leo"
                android:textColor="@color/gc_text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTipText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Variables make your code reusable!"
                android:textColor="@color/gc_text_secondary"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:id="@+id/tipTail"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/bg_tip_tail"
            android:rotation="45"
            android:translationX="-6dp"
            android:elevation="20dp"
            app:layout_constraintEnd_toStartOf="@id/tipBubble"
            app:layout_constraintTop_toTopOf="@id/tipBubble"
            app:layout_constraintBottom_toBottomOf="@id/tipBubble"
            app:layout_constraintVertical_bias="0.42" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
