<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="16dp"
    app:cardBackgroundColor="@color/gc_card"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/continueTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue Learning"
            android:textColor="@color/gc_text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lessonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Introduction to Variables"
            android:textColor="@color/gc_text_secondary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lessonMeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Lesson 3 â€¢ Python Basics"
            android:textColor="@color/gc_text_secondary"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/lessonProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gc_progress_track"
                android:max="100"
                android:progress="60"
                android:progressTint="@color/gc_accent" />

            <TextView
                android:id="@+id/lessonPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="60%"
                android:textColor="@color/gc_text_secondary"
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="14dp"
            android:text="Continue"
            android:textAllCaps="false"
            app:backgroundTint="@color/gc_accent"
            app:cornerRadius="14dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
